<?xml version="1.0" encoding="UTF-8"?>
<!--
    This XML file allows us to easily customize the look and language used
    in our program's user interface. Note that this properties file is only
    for the standard controls for an app from the SimpleAppFramework, so
    it would not include things initialized for the workspace, which is
    customizable.
-->
<properties>
    <property_list>
        <property name="APP_WINDOW_WIDTH" value="1000"/>
        <property name="APP_WINDOW_HEIGHT" value="800"/>
        <property name="APP_TITLE" value="BuzzWord"/>
        <property name="APP_LOGO" value="Logo.png"/>
        <property name="APP_PATH_CSS" value="css"/>
        <property name="APP_CSS" value="buzzword_style.css"/>
        <property name="APP_SAVED_GAMES_PATH" value="work"/>

        <!-- WORKSPACE CSS PROPERTIES -->
        <property name="ROOT_BORDERPANE_ID" value="background"/>
        <property name="TOP_TOOLBAR_ID" value="toolbar"/>
        <property name="SEGMENTED_BUTTON_BAR" value="segmented-button-bar"/>
        <property name="FIRST_TOOLBAR_BUTTON" value="first-toolbar-button"/>
        <property name="LAST_TOOLBAR_BUTTON" value="last-toolbar-button"/>
        <property name="HEADING_LABEL" value="heading-label"/>

        <!-- PROGRAM ICON FILES -->
        <property name="NEW_ICON" value="New.png"/>
        <property name="LOGIN_ICON" value="Login.png"/>
        <property name="PLAY_ICON" value="Play.png"/>
        <property name="PROFILE_ICON" value="Profile.png"/>
        <property name="HOME_ICON" value="Home.png"/>
        <property name="LOAD_ICON" value="Load.png"/>
        <property name="SAVE_ICON" value="Save.png"/>
        <property name="EXIT_ICON" value="Exit.png"/>
        <property name="PROFESSAUR_ICON" value="Professaur.png"/>
        <property name="LOGOUT_ICON" value="Logout.png"/>

        <!-- TOOLTIPS FOR BUTTONS -->
        <property name="NEW_TOOLTIP" value="Create new profile"/>
        <property name="LOGIN_TOOLTIP" value="Login to profile"/>
        <property name="PLAY_TOOLTIP" value="Start playing BuzzWord!"/>
        <property name="PROFILE_TOOLTIP" value="Go to profile"/>
        <property name="HOME_TOOLTIP" value="Return to home page"/>
        <property name="LOAD_TOOLTIP" value="Login to account"/>
        <property name="SAVE_TOOLTIP" value="Save game"/>
        <property name="EXIT_TOOLTIP" value="Exit application"/>
        <property name="LOGOUT_TOOLTIP" value="Logout of profile"/>

        <!-- ERROR MESSAGES -->
        <property name="CLOSE_BUTTON_TEXT" value="Close"/>

        <property name="NEW_ERROR_TITLE" value="Creation Error"/>
        <property name="NEW_ERROR_MESSAGE" value="An error occured starting a new game"/>
        <property name="LOAD_ERROR_TITLE" value="Load Error"/>
        <property name="LOAD_ERROR_MESSAGE" value="An error occured loading saved game"/>
        <property name="SAVE_ERROR_TITLE" value="Save Error"/>
        <property name="SAVE_ERROR_MESSAGE" value="An error occured saving game"/>
        <property name="PROPERTIES_LOAD_ERROR_TITLE" value="Property Load Error"/>
        <property name="PROPERTIES_LOAD_ERROR_MESSAGE" value="An error occured loading a property file."/>

        <!-- VERIFICATION MESSAGES -->
        <property name="NEW_COMPLETED_MESSAGE" value="New Game Ready"/>
        <property name="NEW_COMPLETED_TITLE" value="New Game Created"/>
        <property name="LOAD_COMPLETED_MESSAGE" value="Game Loaded"/>
        <property name="LOAD_COMPLETED_TITLE" value="Loading Completed"/>
        <property name="SAVE_COMPLETED_MESSAGE" value="Your game was successfully saved"/>
        <property name="SAVE_COMPLETED_TITLE" value="Game Saved"/>
        <property name="SAVE_UNSAVED_WORK_MESSAGE" value="Would you like to save your progress so far?"/>
        <property name="SAVE_UNSAVED_WORK_TITLE" value="Save progress?"/>
        <property name="PROFILE_CREATED_TITLE" value="Create Profile"/>
        <property name="PROFILE_CREATED_MESSAGE" value="Profile successfully created!"/>
        <property name="LOGIN_SUCCESS_TITLE" value="Login"/>
        <property name="LOGIN_SUCCESS_MESSAGE" value="Login complete! Welcome back "/>
        <property name="LOGIN_FAIL_MESSAGE" value="Username or password incorrect, please try again."/>
        <property name="LEVEL_CLEARED_TITLE" value="Buzzword"/>
        <property name="LEVEL_CLEARED_MESSAGE" value="Level complete!"/>


        <!-- GAME-SPECIFIC PARAMETERS -->
        <property name="WORK_FILE_EXT" value="json"/>
        <property name="WORK_FILE_EXT_DESC" value="Game File"/>
        <property name="SAVE_WORK_TITLE" value="Save"/>
        <property name="CREATE_PROFILE_TITLE" value="Create"/>
        <property name="LOAD_WORK_TITLE" value="Select file to load"/>
        <property name="GAME_WON_MESSAGE" value="You won."/>
        <property name="GAME_LOST_MESSAGE" value="You lost"/>
        <property name="GAME_OVER_TITLE" value="Game Over"/>

    </property_list>
    <property_options_list/>
</properties>